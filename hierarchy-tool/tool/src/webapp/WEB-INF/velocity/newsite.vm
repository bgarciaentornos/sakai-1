#chef_start()
	<script type="text/javascript" src="/library/js/jquery.js"></script>
	<script type="text/javascript">
	$(document).ready( function() {
			$('#name').keypress( function(e) {
			    // Ignore TAB
				if (e.which != 9) {
					// Select the custom radio button
					$("input[@name='method']").val(
					 $("#method-CUSTOM").attr("checked", "checked").attr("value")
					);
				}
			});
	});
	</script>
#chef_portletContainer()
#chef_portletContent()
#if ($mode == "new")
	#set ($prefix = "newsite")
#else
	#set ($prefix = "reusesite")
#end
<h3>#springMessage("${prefix}.title")</h3>

<p>
#springMessage("${prefix}.intro")
</p>

<form method="post">

<input type="hidden" name="_action" value="act_newsite"/>

<table cellpadding="4px">
 <tr>
  <th>
   <label for="title">#springMessage("site.title")</label>
  </th>
  <td>
  #if ($mode == "new")
     #springFormInput("command.title" "maxlength='${titleMaxLength}'")
  #else
    #springFormInput("command.title" "maxlength='${titleMaxLength}' readonly='true'")
  #end
   #springShowErrors("" "")
  </td>
 </tr>
 <tr>
  <th>
   <label>#springMessage("site.url")</label>
  </th>
  <td>
   #springFormRadioButton("command.method" "AUTOMATIC" "")<label for="method-AUTOMATIC">#springMessage("url.automatic")</label><br/>
   #springFormRadioButton("command.method" "CUSTOM" "")<label for="method-CUSTOM">#springMessage("url.custom")</label>
   #springFormInput("command.name" "")
   #springShowErrors("" "")
  </td>
 </tr>
</table>
</p>
<p class="act">
 <input type="submit" class="active" value="#springMessage("${prefix}.submit")"/>
</p>
</form>

#chef_portletContentEnd()
#chef_portletContainerEnd()
#chef_end()
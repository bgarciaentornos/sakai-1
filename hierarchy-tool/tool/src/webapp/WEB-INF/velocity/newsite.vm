#chef_start()
	<script type="text/javascript" src="/library/js/jquery.js"></script>
	<script type="text/javascript">
	$(document).ready( function() {
			$('#name').keypress( function(e) {
			    // Ignore TAB
				if (e.which != 9) {
					// Select the custom radio button
					$("input[@name='method']").val(
					 $("#method-CUSTOM").attr("checked", "checked").attr("value")
					);
				}
			});
	});
	</script>
#chef_portletContainer()
#chef_portletContent()

<h3>#springMessage("newsite.title")</h3>

<p>
#springMessage("newsite.intro")
</p>

<form method="post" action="${rootUrl}">

<input type="hidden" name="_action" value="act_newsite"/>

<table cellpadding="4px">
 <tr>
  <th>
   <label for="title">#springMessage("newsite.site.title")</label>
  </th>
  <td>
   #springFormInput("command.title" "maxlength='${titleMaxLength}'")
   #springShowErrors("" "")
  </td>
 </tr>
 <tr>
  <th>
   <label>#springMessage("newsite.url")</label>
  </th>
  <td>
   #springFormRadioButton("command.method" "AUTOMATIC" "")<label for="method-AUTOMATIC">#springMessage("newsite.automatic")</label><br/>
   #springFormRadioButton("command.method" "CUSTOM" "")<label for="method-CUSTOM">#springMessage("newsite.custom")</label>
   #springFormInput("command.name" "")
   #springShowErrors("" "")
  </td>
 </tr>
</table>
</p>
<p class="act">
 <input type="submit" class="active" value="Continue"/>
</p>
</form>

#chef_portletContentEnd()
#chef_portletContainerEnd()
#chef_end()
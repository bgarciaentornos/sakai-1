<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="uk.ac.ox.oucs.vle.CourseSignupDAO" table="course_signup">
		<!-- create the primary key id -->
		<id name="id" type="string">
			<column name="id" />
			<generator class="uuid" />
		</id>
		<property name="userId" type="string" length="99" index="true" />
		<property name="status" type="string" length="20"/>
		<property name="created" type="date" />
		<set name="components" lazy="true" table="course_component_signup"
			inverse="true" >
			<key column="signup" not-null="true"/>
			<many-to-many class="uk.ac.ox.oucs.vle.CourseComponentDAO"
				column="component" />
		</set>
		<property name="supervisorId" type="string" length="99"
			index="true" />
		<map name="properties" table="course_prop">
			<key column="id" foreign-key="none"/>
			<map-key type="string" length="20" column="key"/>
			<element type="text" column="value"/>
		</map>
	</class>

	<class name="uk.ac.ox.oucs.vle.CourseComponentDAO" table="course_component">
		<!-- create the primary key id -->
		<id name="id" type="string">
			<column name="id" />
			<generator class="uuid" />
		</id>
		<property name="title" type="string" length="256" />
		<property name="termcode" type="string" length="30"
			index="course_component_term_idx" />
		<property name="opens" type="date" />
		<property name="closes" type="date" />
		<property name="size" type="int" />
		<property name="componentId" type="string" length="30"/><!-- The set (teaching_component) this component is from. -->
		<set name="signups" lazy="true" table="course_component_signup">
			<key column="component" not-null="true" />
			<many-to-many class="uk.ac.ox.oucs.vle.CourseSignupDAO"
				column="signup" />
		</set>
		<set name="sets" inverse="true">
			<key column="component"/>
			<many-to-many class="uk.ac.ox.oucs.vle.CourseSetDAO" column="set"/>
		</set>
		<map name="properties" table="course_prop">
			<key column="id" foreign-key="none"/>
			<map-key type="string" length="20" column="key"/>
			<element type="text" column="value"/>
		</map>
	</class>

	<!-- This is a set of components that must be taken at the same time. -->
	<class name="uk.ac.ox.oucs.vle.CourseSetDAO" table="course_set">
		<!-- create the primary key id -->
		<id name="id" type="string">
			<column name="id" />
			<generator class="uuid" />
		</id>
		<property name="required" type="int"/><!-- Number of modules required for a signup. -->
		<set name="components">
			<key column="set"/>
			<many-to-many class="uk.ac.ox.oucs.vle.CourseComponentDAO" column="component"/>
		</set>
		<one-to-one name="group" class="uk.ac.ox.oucs.vle.CourseGroupDAO"/>
	</class>


	<!--  A set of courses that can be taken. -->
	<class name="uk.ac.ox.oucs.vle.CourseGroupDAO" table="course_group">
		<!-- create the primary key id -->
		<id name="id" type="string">
			<column name="id" />
			<generator class="uuid" />
		</id>
		<property name="title" type="string" length="256" />
		<set name="sets" lazy="true" table="course_group_set">
			<key column="group" />
			<one-to-many class="uk.ac.ox.oucs.vle.CourseSetDAO"/>
		</set>
		<map name="properties" table="course_prop">
			<key column="id" foreign-key="none"/>
			<map-key type="string" length="20" column="key"/>
			<element type="text" column="value"/>
		</map>
	</class>
	
</hibernate-mapping>

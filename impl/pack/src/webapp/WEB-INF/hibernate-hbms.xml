<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- Aaron Zeckoski (aaronz@vt.edu) -->
<beans>

	<!-- Add our HBM files to the Sakai global session factory -->
	<bean id="org.sakaiproject.springframework.orm.hibernate.impl.AdditionalHibernateMappingsImpl.evaluation"
			class="org.sakaiproject.springframework.orm.hibernate.impl.AdditionalHibernateMappingsImpl">
		<property name="mappingResources">
			<list>
				<value>org/sakaiproject/evaluation/hbm/EvalAnswer.hbm.xml</value>
				<value>org/sakaiproject/evaluation/hbm/EvalAssignGroup.hbm.xml</value>
				<value>org/sakaiproject/evaluation/hbm/EvalConfig.hbm.xml</value>
				<value>org/sakaiproject/evaluation/hbm/EvalEmailTemplate.hbm.xml</value>
				<value>org/sakaiproject/evaluation/hbm/EvalEvaluation.hbm.xml</value>
				<value>org/sakaiproject/evaluation/hbm/EvalItem.hbm.xml</value>
				<value>org/sakaiproject/evaluation/hbm/EvalItemGroup.hbm.xml</value>
				<value>org/sakaiproject/evaluation/hbm/EvalResponse.hbm.xml</value>
				<value>org/sakaiproject/evaluation/hbm/EvalScale.hbm.xml</value>
				<value>org/sakaiproject/evaluation/hbm/EvalTemplate.hbm.xml</value>
				<value>org/sakaiproject/evaluation/hbm/EvalTemplateItem.hbm.xml</value>
			</list>
		</property>
	</bean>

</beans>

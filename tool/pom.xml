<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>uk.ac.ox.oucs</groupId>
		<artifactId>course-signup-base</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	<groupId>uk.ac.ox.oucs.vle</groupId>
	<artifactId>course-signup</artifactId>
	<packaging>war</packaging>
	<name>Course Signup Webapp</name>
	<dependencies>
		<dependency>
			<groupId>org.sakaiproject.kernel</groupId>
			<artifactId>sakai-kernel-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.sakaiproject.kernel</groupId>
			<artifactId>sakai-component-manager</artifactId>
		</dependency>
		<dependency>
			<groupId>org.sakaiproject.kernel</groupId>
			<artifactId>sakai-kernel-util</artifactId>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.sun.jersey</groupId>
			<artifactId>jersey-server</artifactId>
			<version>1.0.3.1</version>
		</dependency>

		<dependency>
			<groupId>org.codehaus.jackson</groupId>
			<artifactId>jackson-core-asl</artifactId>
			<type>jar</type>
			<version>1.5.3</version>
		</dependency>
		<dependency>
			<groupId>org.codehaus.jackson</groupId>
			<artifactId>jackson-mapper-asl</artifactId>
			<type>jar</type>
			<version>1.5.3</version>
		</dependency>

		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.4</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-mock</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring</artifactId>
		</dependency>


		<dependency>
			<groupId>uk.ac.ox.oucs</groupId>
			<artifactId>course-signup-api</artifactId>
		</dependency>

	</dependencies>
	<profiles>
		<profile>
			<id>standalone</id>
			<!-- Profile which should pull everything into the war so it can be run 
				without Sakai. -->
			<dependencies>
				<dependency>
					<groupId>uk.ac.ox.oucs</groupId>
					<artifactId>course-signup-hbm</artifactId>
					<scope>compile</scope>
				</dependency>
				<dependency>
					<groupId>uk.ac.ox.oucs</groupId>
					<artifactId>course-signup-impl</artifactId>
					<scope>compile</scope>
				</dependency>
				<!-- Sakai services -->
				<dependency>
					<groupId>org.sakaiproject.kernel</groupId>
					<artifactId>sakai-kernel-api</artifactId>
					<scope>compile</scope>
				</dependency>
				<dependency>
					<groupId>org.sakaiproject.kernel</groupId>
					<artifactId>sakai-component-manager</artifactId>
					<scope>compile</scope>
				</dependency>
				<dependency>
					<groupId>org.sakaiproject.kernel</groupId>
					<artifactId>sakai-kernel-util</artifactId>
				</dependency>
				<dependency>
					<groupId>commons-logging</groupId>
					<artifactId>commons-logging</artifactId>
					<version>1.0.4</version>
					<scope>compile</scope>
				</dependency>
				<dependency>
					<groupId>org.hibernate</groupId>
					<artifactId>hibernate</artifactId>
					<scope>compile</scope>
				</dependency>
				<dependency>
					<groupId>org.springframework</groupId>
					<artifactId>spring</artifactId>
					<scope>compile</scope>
				</dependency>
			</dependencies>
		</profile>
	</profiles>
	<build>
		<plugins>
			<plugin>
				<!-- This fires off the YUI compressor. -->
				<groupId>com.samaxes.maven</groupId>
				<artifactId>maven-minify-plugin</artifactId>
				<version>1.2.1</version>
				<executions>
					<execution>
						<!-- The exhibit source code has a small change to allow a conversion 
							function when reading JSON. -->
						<id>exhibit-re-compress</id>
						<phase>process-resources</phase>
						<goals>
							<goal>minify</goal>
						</goals>
						<configuration>
							<jsSourceDir>static/lib/exhibit</jsSourceDir>
							<!--  To regenerate the list use find scripts -name \*.js \! -name create.js | tr '\n' ',' -->
							<jsSourceIncludes>scripts/data/collection.js,scripts/data/controls.js,scripts/data/database.js,scripts/data/exporters/bibtex-exporter.js,scripts/data/exporters/exhibit-json-exporter.js,scripts/data/exporters/rdf-xml-exporter.js,scripts/data/exporters/semantic-wikitext-exporter.js,scripts/data/exporters/tsv-exporter.js,scripts/data/expression-parser.js,scripts/data/expression.js,scripts/data/functions.js,scripts/data/importers/babel-based-importer.js,scripts/data/importers/exhibit-json-importer.js,scripts/data/importers/html-table-importer.js,scripts/data/importers/jsonp-importer.js,scripts/data/importers/rdfa-importer.js,scripts/exhibit.js,scripts/persistence.js,scripts/ui/coders/color-coder.js,scripts/ui/coders/color-gradient-coder.js,scripts/ui/coders/default-color-coder.js,scripts/ui/coders/icon-coder.js,scripts/ui/coders/size-coder.js,scripts/ui/coders/size-gradient-coder.js,scripts/ui/coordinator.js,scripts/ui/facets/cloud-facet.js,scripts/ui/facets/hierarchical-facet.js,scripts/ui/facets/list-facet.js,scripts/ui/facets/numeric-range-facet.js,scripts/ui/facets/slider-facet.js,scripts/ui/facets/slider.js,scripts/ui/facets/text-search-facet.js,scripts/ui/format-parser.js,scripts/ui/formatter.js,scripts/ui/lens.js,scripts/ui/ui-context.js,scripts/ui/ui.js,scripts/ui/views/html-view.js,scripts/ui/views/ordered-view-frame.js,scripts/ui/views/tabular-view.js,scripts/ui/views/thumbnail-view.js,scripts/ui/views/tile-view.js,scripts/ui/views/view-panel.js,scripts/ui/widgets/collection-summary-widget.js,scripts/ui/widgets/legend-gradient-widget.js,scripts/ui/widgets/legend-widget.js,scripts/ui/widgets/logo.js,scripts/ui/widgets/option-widget.js,scripts/ui/widgets/resizable-div-widget.js,scripts/ui/widgets/toolbox-widget.js,scripts/util/coders.js,scripts/util/facets.js,scripts/util/set.js,scripts/util/settings.js,scripts/util/util.js,scripts/util/views.js</jsSourceIncludes>
							<!-- The problem with include/excludes is the order is not fixed.
							<jsSourceIncludes>scripts/**/*.js</jsSourceIncludes>
							<jsSourceExcludes>scripts/create.js</jsSourceExcludes>
							 -->
							<jsFinalFile>exhibit-bundle.js</jsFinalFile>
							<cssSourceDir>static/lib/exhibit</cssSourceDir>
							<cssSourceIncludes>styles/**/*.css</cssSourceIncludes>
							<cssFinalFile>exhibit-bundle.css</cssFinalFile>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>

<?xml version="1.0" encoding="UTF-8"?>
<project>
	<pomVersion>3</pomVersion>
	<extend>../../../master/project.xml</extend>
	<name>sakai-evaluation-logic-api</name>
	<groupId>sakaiproject</groupId>
	<id>sakai-evaluation-logic-api</id>
	<currentVersion>${sakai.version}</currentVersion>
	<organization>
		<name>Sakai Project</name>
		<url>http://www.sakaiproject.org/</url>
	</organization>
	<inceptionYear>2006</inceptionYear>

	<!-- you must deploy your business API to shared or it will be 
		inaccessible from your tool -->
	<properties>
		<deploy.type>jar</deploy.type>
		<deploy.target>shared</deploy.target>
	</properties>

	<dependencies>
	
		<!-- velocity for processing text templates -->
        <dependency>
            <groupId>velocity</groupId>
            <artifactId>velocity</artifactId>
            <version>1.4</version>
        </dependency> 
        
		<!-- our plugin so we can run maven from this directory for testing -->
		<dependency>
				<groupId>sakaiproject</groupId>
				<artifactId>sakai</artifactId>
				<version>${sakai.plugin.version}</version>
				<type>plugin</type>
		</dependency>

		<!-- our tool internal dependencies -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-evaluation-model-api</artifactId>
			<version>${sakai.version}</version>
		</dependency>

		<!-- sakai dependencies -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-entity-api</artifactId>
			<version>${sakai.version}</version>
		</dependency>
		
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-scheduler-api</artifactId>
			<version>${sakai.version}</version>
		</dependency>

        <!-- generic DAO -->
        <dependency>
                <groupId>generic-dao</groupId>
                <artifactId>generic-dao</artifactId>
                <version>0.9</version>
        </dependency>

       <!-- Quartz scheduling -->
		<dependency>
			<groupId>quartz</groupId>
			<artifactId>quartz</artifactId>
			<version>1.5.2</version>
		</dependency>

	</dependencies>

	<build>
		<sourceDirectory>src/java</sourceDirectory>
		<resources>
			<resource>
			  <directory>src/java</directory>
			    <includes>
			      <include>**/*.xml</include>
			    </includes>
			</resource>
		</resources>
	</build>

</project>

